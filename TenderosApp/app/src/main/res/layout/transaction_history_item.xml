<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"

    android:id="@+id/provider_background_cv"
    app:cardBackgroundColor="@color/default_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="26dp">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:fontFamily="@font/rubik"
            android:lines="1"
            android:singleLine="true"
            android:text="fecha"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/default_black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/percentage"
            app:layout_constraintStart_toEndOf="@+id/percentage"
            app:layout_constraintTop_toTopOf="@+id/percentage"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/business_name"
            android:layout_width="wrap_content"
            android:fontFamily="@font/rubik"
            android:lines="1"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/default_black"
            android:textSize="16sp"
            android:text="descrioicon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />


        <TextView
            android:id="@+id/sale_total"
            android:layout_width="wrap_content"
            android:fontFamily="@font/rubik"
            android:lines="1"
            android:text="id"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/default_black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/product_name"
            app:layout_constraintStart_toEndOf="@+id/product_name"
            app:layout_constraintTop_toTopOf="@+id/product_name"
            app:layout_constraintVertical_chainStyle="packed" />




    </LinearLayout>
</com.google.android.material.card.MaterialCardView>