<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/producto_name"
        style="@style/Widget.Tenderos.TextView.regularFont"
        android:text="@string/nombre_producto" />

    <TextView
        android:id="@+id/regresado_tv"
        style="@style/Widget.Tenderos.TextView.regularFont"
        android:text="@string/default_value"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@id/entregado_tv"/>


    <TextView
        android:id="@+id/entregado_tv"
        style="@style/Widget.Tenderos.TextView.regularFont"
        android:layout_alignParentEnd="true"
        android:paddingEnd="80dp"
        android:text="@string/default_value" />

</RelativeLayout>